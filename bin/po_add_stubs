#!/usr/bin/env perl
use strict;
use warnings;

use Locale::POFileManager;

my ($dir, $lang) = @ARGV;
$dir  ||= '.';
$lang ||= 'en';

my $manager = Locale::POFileManager->new(
    base_dir           => $dir,
    canonical_language => $lang,
    stub_msgstr        => sub {
        my %args = @_;
        "$args{canonical_msgstr} ($args{lang})";
    },
);

$manager->add_stubs;
